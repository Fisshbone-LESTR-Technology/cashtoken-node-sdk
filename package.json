{
  "name": "@fissboneandlestr/cashtoken-node-sdk",
  "version": "1.0.0",
  "description": "CashToken NodeJS SDK",
  "main": "lib/index.js",
  "scripts": {
    "start": "npm run build",
    "test": "jest",
    "test-with-watch": "jest --watch",
    "coverage": "jest --coverage",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "fix": "tslint --fix -p tsconfig.json",
    "prepare": "npm run build",
    "prepublish": "npm run build"
  },
  "author": "Peter Iyiola",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.9",
    "@types/request-promise": "^4.1.44",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.1",
    "prettier": "^1.17.1",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "request": "^2.88.0",
    "request-promise": "^4.2.4"
  },
  "files": [
    "lib/**/*"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run lint",
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build"
    }
  }
}
