{
  "name": "ts-express-starter",
  "version": "1.0.0",
  "description": "TS Module Starter",
  "main": "lib/index.js",
  "scripts": {
    "start": "npm run build",
    "test": "jest",
    "test-with-watch": "jest --watch",
    "coverage": "jest --coverage",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "fix": "tslint --fix -p tsconfig.json",
    "prepare": "npm run build"
  },
  "author": "Peter Iyiola",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.1",
    "prettier": "^1.17.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.2"
  },
  "dependencies": {},
  "files": [
    "lib/**/*"
  ],
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": ["npm run lint", "prettier --write", "git add", "npm run build"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
